{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": false,
		"allowJs": true,
		"declarationMap": true,
		"declaration": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"exactOptionalPropertyTypes": true,
		"lib": ["ESNext", "DOM"]
	},
	"exclude": ["node_modules", "dist/", "eslint.config.js", "tmp/", "scripts/"]
}
